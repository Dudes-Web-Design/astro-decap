---
import BaseLayout from "@layouts/BaseLayout.astro";
import UniversalForm from "@components/UniversalForm.astro";

const pageTitle = "UniversalForm Component Test";
const pageDescription = "Testing the UniversalForm component with various configurations and form types";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="test-section">
    <div class="cs-container">
      <h1>UniversalForm Component Test</h1>
      <p>Testing the UniversalForm component with different configurations and form types:</p>
    </div>
  </section>

  <!-- Default Contact Form -->
  <UniversalForm formType="contact" />

  <!-- Custom Contact Form -->
  <UniversalForm 
    formType="contact"
    title="Start Your Project Today"
    subtitle="Free Consultation Available"
    description="Ready to transform your outdoor space? Our experienced team is here to help bring your vision to life with professional excavation, septic, and groundwork services."
    topper="Get Started"
    id="custom-contact"
    className="custom-contact-form"
  />

  <!-- Service Form with Service Name -->
  <UniversalForm 
    formType="service"
    serviceName="Excavation Services"
    title="Get Your Excavation Quote"
    description="Contact us for professional excavation services."
    topper="Excavation"
    id="service-contact"
  />

  <!-- Area Inquiry Form -->
  <UniversalForm 
    formType="area-inquiry"
    title="Check Our Service Area"
    description="Not sure if we serve your location? Let us know where you're located."
    id="area-inquiry"
  />

  <!-- Compact Contact Form -->
  <UniversalForm 
    formType="contact"
    title="Quick Contact"
    description=""
    topper=""
    id="minimal-contact"
    compact={true}
  />
</BaseLayout>

<style lang="less">
@import "@styles/variables.less";
@import "@styles/mixins.less";

.test-section {
  .section-padding();
  background-color: rgba(128, 192, 92, 0.05);
  
  .cs-container {
    .container();
    max-width: 80rem;
    text-align: center;
  }

  h1 {
    .cs-title-style();
    margin-bottom: @spacing-lg;
  }

  p {
    .cs-text-style();
    margin-bottom: 0;
  }

  body.dark-mode & {
    background-color: rgba(128, 192, 92, 0.1);
  }
}

// Custom styling for testing
.custom-contact-form {
  background-color: rgba(128, 192, 92, 0.03);
  
  body.dark-mode & {
    background-color: rgba(128, 192, 92, 0.05);
  }
}
</style> 