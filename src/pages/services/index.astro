---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import Landing from "@components/Landing.astro";
import CTA from "@components/CTA.astro";
import landingImage from "@assets/images/landing.jpg";
import { getImage } from "astro:assets";
import { getCollection } from "astro:content";

const optimizedImage = await getImage({ src: landingImage, format: 'avif' });
const services = await getCollection("services");
---

<BaseLayout title="Our Services" description="All the services we offer." preloadedImage={optimizedImage}>
  <Landing title="Our Services" image={landingImage} imageAlt="Septic and excavation services" />

  <section id="services-intro" class="cs-flex-group">
    <span class="cs-topper">Full-Service</span>
    <h2 class="cs-title">Professional Septic, Excavation & Hardscaping</h2>
    <p class="cs-text">
      We offer a full range of septic, groundwork, and hardscaping services for residential and commercial clients in North Alabama and Middle Tennessee. If you have questions about any of our services or need a custom solution, please <a href="/contact">reach out</a>—we’re happy to help!
    </p>
  </section>

  <section id="services" class="services">
    {services.length > 0 ? (
      <div class="services-list">
        {services.map((service) => (
          <a href={`/services/${service.data.slug}/`} class="service-card" aria-label={`Learn more about ${service.data.title}`}>
            {/* Only title and description, no image */}
            <h3>{service.data.title}</h3>
            <p>{service.data.description}</p>
            <span class="service-link">Learn More</span>
          </a>
        ))}
      </div>
    ) : (
      <p>No services found.</p>
    )}
  </section>

  <section id="services-contact-cta" class="cs-flex-group trust-section trust-section-extra-padding trust-section-extra-margin">
    <h2 class="cs-title">Not Sure What You Need?</h2>
    <p class="cs-text">
      Every property and project is unique. If you’re not sure which service is right for you, <a href="/contact">contact us</a> for a free, no-pressure consultation. We’re happy to answer your questions and help you find the best solution.
    </p>
    <a href="/contact" class="cs-button-solid" style="margin-top: 1rem">Get an Estimate Now</a>
  </section>

</BaseLayout>

<style lang="less">
#services-intro {
  padding-top: 3.5rem;
  max-width: 800px;
  margin: 0 auto 2.5rem auto;
  text-align: center;
  .cs-topper {
    color: var(--primary);
    font-weight: 700;
    margin-bottom: 0.5rem;
    display: block;
  }
  .cs-title {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    color: var(--headerColor, #222);
  }
  .cs-text {
    color: var(--bodyTextColor, #444);
    font-size: 1.125rem;
    margin-bottom: 0;
    a {
      color: var(--primary);
      text-decoration: underline;
    }
  }
}
.services {
  padding: var(--sectionPadding);
  background: var(--dark);
}
.services-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2.5rem;
  justify-content: center;
  align-items: stretch;
  width: 100%;
  margin: 0 auto;
  max-width: 1400px;
}
.service-card {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-decoration: none;
  background: #f7f7f7;
  border: 1.5px solid #e8e8e8;
  border-radius: 1rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.10);
  padding: 2.5rem 2rem 2rem 2rem;
  min-width: 260px;
  max-width: 340px;
  width: 100%;
  transition: box-shadow 0.2s, border 0.2s, background 0.2s;
  color: var(--headerColor, #222);
  position: relative;
  &:hover {
    border: 2px solid var(--primary);
    box-shadow: 0 4px 24px rgba(0,0,0,0.18);
    background: #f0f8f3;
  }
  h3 {
    margin: 0 0 0.5rem 0;
    color: var(--headerColor, #222);
    font-size: 1.35rem;
    font-weight: 700;
    text-align: left;
  }
  p {
    color: var(--bodyTextColor, #444);
    opacity: 0.85;
    font-size: 1.08rem;
    margin: 0 0 1.5rem 0;
    text-align: left;
  
  }
  .service-link {
    color: var(--primary);
    font-weight: 700;
    text-decoration: underline;
    font-size: 1rem;
    margin-top: auto;
    transition: color 0.2s;
    &:hover {
      color: #222;
    }
  }
}
@media (max-width: 1200px) {
  .services-list {
    grid-template-columns: repeat(2, 1fr);
    max-width: 900px;
  }
}
@media (max-width: 700px) {
  .services-list {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  .service-card {
    width: 100%;
    max-width: 100%;
  }
}
.trust-section {
  max-width: 800px;
  margin: 0 auto 3rem auto;
  text-align: center;
  background: #f7f7f7;
  border-radius: 1rem;
  padding: 2.5rem 1.5rem;
}
.trust-section-extra-padding {
  padding-top: 4rem;
}
.trust-section-extra-margin {
  margin-top: 3.5rem;
}
.estimate-btn:hover {
  background: #222;
  color: #fff;
}
@media (min-width: 900px) {
  .services-list {
    gap: 3rem;
  }
  .service-card {
    width: 320px;
  }
}
body.dark-mode {
  .services {
    background: var(--medium);
  }
  .service-card {
    background: var(--primaryDark);
    border: 1.5px solid rgba(255,255,255,0.10);
    color: #fff;
    h3, p { color: #fff; }
    .service-link {
      color: var(--primary);
      &:hover { color: #fff; }
    }
    &:hover {
      background: rgba(255,255,255,0.08);
      border: 2px solid var(--primary);
    }
  }
  .trust-section {
    background: var(--primaryDark);
    color: #fff;
    h2, p, a { color: #fff; }
    .cs-button-solid, .estimate-btn {
      color: #000;
      background: var(--primary);
      &:hover {
        color: #fff;
        background: #222;
      }
    }
  }
}
</style>