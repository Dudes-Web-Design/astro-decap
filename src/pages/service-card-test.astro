---
import BaseLayout from "@layouts/BaseLayout.astro";
import ServiceCard from "@components/ServiceCard.astro";

const pageTitle = "ServiceCard Component Test";
const pageDescription = "Testing the new ServiceCard component with service content collection data";

// Sample data that matches services content collection structure
const sampleServices = [
  {
    title: "Excavation & Site Prep",
    description: "Professional excavation and site preparation services for your next project.",
    slug: "excavation-site-prep",
    image: null
  },
  {
    title: "Septic Installation", 
    description: "Professional septic system installation services.",
    slug: "septic-installation",
    image: null
  },
  {
    title: "Drainage Solutions",
    description: "Effective drainage solutions to protect your property from water damage.",
    slug: "drainage-solutions", 
    image: null
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="test-section">
    <div class="cs-container">
      <h1>ServiceCard Component Test</h1>
      <p>Testing the ServiceCard component with sample service data:</p>
      
      <div class="service-cards-grid">
        {sampleServices.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            slug={service.slug}
            image={service.image}
          />
        ))}
      </div>

      <!-- Test with custom className -->
      <h2>With Custom Class</h2>
      <div class="service-cards-grid">
        <ServiceCard
          title="Custom Styled Service"
          description="This ServiceCard has a custom CSS class applied for testing styling flexibility."
          slug="custom-test"
          className="custom-service-card"
        />
      </div>
    </div>
  </section>
</BaseLayout>

<style lang="less">
@import "@styles/variables.less";
@import "@styles/mixins.less";

.test-section {
  .section-padding();
  
  .cs-container {
    .container();
    max-width: 80rem;
  }

  h1, h2 {
    .cs-title-style();
    margin-bottom: @spacing-lg;
    text-align: center;
  }

  p {
    .cs-text-style();
    text-align: center;
    margin-bottom: @spacing-xl;
  }

  .service-cards-grid {
    .responsive-grid(1, 2, 3);
    margin-bottom: @spacing-xxl;
  }

  // Custom styling for testing
  .custom-service-card {
    border: 2px solid var(--primary);
    
    body.dark-mode & {
      border-color: var(--primary);
    }
  }
}
</style> 