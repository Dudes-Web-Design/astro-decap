import BaseLayout from "@layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
import FAQ from "@components/FAQ.astro";
import { Image, Picture } from 'astro:assets';
import type { ImageMetadata } from 'astro';

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import landingImage from "@assets/images/landing.jpg"
import { getImage } from "astro:assets";

// Create responsive variants for the hero image
const heroImageDesktop = await getImage({
  src: landingImage, 
  format: 'webp',
  width: 1920,
  height: 1280,
  quality: 90
});

const heroImageTablet = await getImage({
  src: landingImage, 
  format: 'webp',
  width: 1200,
  height: 800,
  quality: 90
});

const heroImageMobile = await getImage({
  src: landingImage, 
  format: 'webp',
  width: 1200,
  height: 800,
  quality: 90
});

// Use JPEG for better OpenGraph compatibility and set proper dimensions for social media
const optimizedImage = await getImage({
  src: landingImage, 
  format: 'jpeg',
  width: 1200,
  height: 630,
  quality: 85
})

// Import review images
import whiddonManagementImg from "@assets/images/whiddon-management.jpg";
import jamesWeaverImg from "@assets/images/james-weaver.png";

// Dynamically import SBS images
const sbsImages = import.meta.glob<{ default: ImageMetadata }>("/src/assets/images/sbs/*.{jpg,jpeg,png,avif,webp}");
const sbsImageEntries = Object.entries(sbsImages);
const sbsImageData = await Promise.all(
  sbsImageEntries.map(async ([path, loader]) => ({
    path,
    mod: await loader(),
  }))
);
// Sort by filename for consistent order
sbsImageData.sort((a, b) => a.path.localeCompare(b.path));

// Dynamically import SBS-R images
const sbsrImages = import.meta.glob<{ default: ImageMetadata }>("/src/assets/images/sbs-r/*.{jpg,jpeg,png,avif,webp}");
const sbsrImageEntries = Object.entries(sbsrImages);
const sbsrImageData = await Promise.all(
  sbsrImageEntries.map(async ([path, loader]) => ({
    path,
    mod: await loader(),
  }))
);
sbsrImageData.sort((a, b) => a.path.localeCompare(b.path));

// Optimize SBS images with responsive variants
const sbsImage1Desktop = await getImage({
  src: sbsImageData[1]?.mod.default || '/assets/images/equipment2.jpg',
  format: 'webp',
  width: 800,
  height: 890,
  quality: 95
});

const sbsImage1Mobile = await getImage({
  src: sbsImageData[1]?.mod.default || '/assets/images/equipment2.jpg',
  format: 'webp',
  width: 400,
  height: 445,
  quality: 95
});

const sbsImage2Desktop = await getImage({
  src: sbsImageData[0]?.mod.default || '/assets/images/driveway.jpg',
  format: 'webp',
  width: 650,
  height: 630,
  quality: 95
});

const sbsImage2Mobile = await getImage({
  src: sbsImageData[0]?.mod.default || '/assets/images/driveway.jpg',
  format: 'webp',
  width: 350,
  height: 340,
  quality: 95
});

// Optimize SBS-R images with responsive variants
const sbsrImage1Desktop = await getImage({
  src: sbsrImageData[0]?.mod.default || '/assets/images/construction.jpg',
  format: 'webp',
  width: 800,
  height: 890,
  quality: 95
});

const sbsrImage1Mobile = await getImage({
  src: sbsrImageData[0]?.mod.default || '/assets/images/construction.jpg',
  format: 'webp',
  width: 400,
  height: 445,
  quality: 95
});

const sbsrImage2Desktop = await getImage({
  src: sbsrImageData[1]?.mod.default || '/assets/images/cabinets2.jpg',
  format: 'webp',
  width: 650,
  height: 630,
  quality: 95
});

const sbsrImage2Mobile = await getImage({
  src: sbsrImageData[1]?.mod.default || '/assets/images/cabinets2.jpg',
  format: 'webp',
  width: 350,
  height: 340,
  quality: 95
});

// Dynamically import portfolio images for gallery
const portfolioImages = import.meta.glob<{ default: ImageMetadata }>("/src/assets/images/portfolio/*.{jpg,jpeg,png,avif,webp}");
const portfolioImageEntries = Object.entries(portfolioImages);
const portfolioImageData = await Promise.all(
  portfolioImageEntries.map(async ([path, loader]) => ({
    path,
    mod: await loader(),
  }))
);
portfolioImageData.sort((a, b) => a.path.localeCompare(b.path));

// Helper function to get portfolio image by name
function getPortfolioImage(imageName: string): ImageMetadata {
  const found = portfolioImageData.find(img => img.path.includes(imageName))?.mod.default;
  if (!found) {
    throw new Error(`Portfolio image ${imageName} not found`);
  }
  return found;
}


